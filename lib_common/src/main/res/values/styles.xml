<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        透明状态栏-->
        <item name="statusBarBackground">@color/transparentBackground</item>
        <!--        每个Activity的Window背景，最好别设置透明或者空-->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--        Transition转场动画，暂未启用-->
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/app_transaction</item>
        <item name="android:windowSharedElementExitTransition">@transition/app_transaction</item>
        <item name="actionMenuTextColor">@color/levelTwoFontColor</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme" tools:ignore="ResourceName">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog" tools:ignore="ResourceName">
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        状态栏字体颜色，只是在安卓6.0以上可用-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/transparentBackground</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
